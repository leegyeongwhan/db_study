<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="db_study.repository.mapper.UserMapper">

    <!-- UserResultMap은 UserEntity와 데이터베이스 테이블의 컬럼을 매핑합니다 -->
    <resultMap id="userResultMap" type="db_study.entity.UserEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="stock" column="stock"/>
    </resultMap>

    <select id="findById" resultMap="userResultMap">
        SELECT id, name, stock
        FROM users
        WHERE id = #{id}
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (name, stock,user_role)
        VALUES (#{name}, #{stock}, #{userRole})
    </insert>

    <update id="update">
        UPDATE users
        SET name = #{name},
            stock = #{stock}
        WHERE id = #{id}
    </update>

<!--    <resultMap id="UserEntityResultMap" type="db_study.entity.UserEntity">-->
<!--        <id property="id" column="id" />-->
<!--        <result property="name" column="name" />-->
<!--        <result property="stock" column="stock" />-->
<!--        <result property="stock" column="stock" />-->
<!--    </resultMap>-->

    <select id="findByRole" resultType="UserEntity">
        SELECT id, name, stock, user_role
        FROM users
        WHERE id = #{id}
          AND user_role = #{userRole}
    </select>
</mapper>
